<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gray_circle_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择时间"
            android:textColor="#333333"
            android:textSize="18sp" />

    </RelativeLayout>

    <!--<View-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="0.1dp"-->
        <!--android:background="@color/color_007aff" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center">

        <com.txt.conference.widget.dialogWheel.WheelView
            android:id="@+id/wheelView_year"
            android:layout_width="50dp"
            android:layout_height="80dp" />

        <com.txt.conference.widget.dialogWheel.WheelView
            android:id="@+id/wheelView_month"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp" />

        <com.txt.conference.widget.dialogWheel.WheelView
            android:id="@+id/wheelView_day"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp" />


        <com.txt.conference.widget.dialogWheel.WheelView
            android:id="@+id/wheelView_hour"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp" />

        <com.txt.conference.widget.dialogWheel.WheelView
            android:id="@+id/wheelView_minute"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/color_007aff"
            android:textSize="16sp" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_007aff" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/color_007aff"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
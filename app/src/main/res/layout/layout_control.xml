<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/room_iv_attendee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="17dp"
        android:src="@mipmap/attendee"/>

    <ImageView
        android:id="@+id/room_iv_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:layout_marginTop="17dp"
        android:src="@mipmap/turn_camera"/>

    <TextView
        android:id="@+id/room_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/room_number"
        android:textSize="14sp"
        android:layout_marginLeft="19dp"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/room_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/room_number"
        android:textSize="14sp"
        android:layout_toRightOf="@id/room_tv_number"
        android:layout_marginLeft="19dp"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/room_iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/room_iv_mute"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        android:src="@mipmap/shard"/>

    <ImageView
        android:id="@+id/room_iv_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/room_iv_camera"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/mute"/>

    <ImageView
        android:id="@+id/room_iv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/room_iv_quit"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/camera_open"/>

    <ImageView
        android:id="@+id/room_iv_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/quit"/>

</RelativeLayout>
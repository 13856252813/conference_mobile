<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/login_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/login_et_account"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/account"
        android:drawablePadding="10dp"
        android:textSize="14sp"
        android:textColorHint="@color/hint"
        android:hint="@string/hint_user"
        android:layout_marginTop="207.5dp"
        android:layout_width="310dp"
        android:layout_height="43dp" />

    <EditText
        android:id="@+id/login_et_password"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/password"
        android:drawablePadding="10dp"
        android:textSize="14sp"
        android:textColorHint="@color/hint"
        android:hint="@string/hint_password"
        android:layout_below="@id/login_et_account"
        android:layout_marginTop="22dp"
        android:layout_width="310dp"
        android:layout_height="43dp" />

    <TextView
        android:id="@+id/login_tv_error"
        android:layout_centerHorizontal="true"
        android:text="@string/login_error"
        android:textColor="@color/orange"
        android:layout_below="@id/login_et_password"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login_bt_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_et_password"
        android:layout_marginTop="147dp"
        android:layout_width="250dp"
        android:layout_height="43.5dp"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:text="@string/login"
        android:background="@drawable/login_corners"/>
</RelativeLayout>

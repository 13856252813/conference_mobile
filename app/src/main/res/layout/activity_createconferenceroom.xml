<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey200"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <LinearLayout
        android:id="@+id/create_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewedit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/conf_title" />

            <TextView
                android:id="@+id/textTitleinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="@string/conference_tilte"
                android:textColor="@color/grey_room"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editviewinfo"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16.5dp"
                android:hint="请输入会议主题"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:textColor="@color/grey_room"
                android:textSize="14sp"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textTitleinfo_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="@string/conference_input"
                android:textColor="@color/grey_room"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@drawable/divider_recycler" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_addman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_edit_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewcreate_addman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/mutiman" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="@string/add_attendee"
                android:textColor="@color/grey_room"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/create_addman_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="13.5dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/grey_room"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@drawable/divider_recycler" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_adddevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_addman"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewcreate_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/conference_device" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="@string/conference_add_device"
                android:textColor="@color/grey_room"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/create_device_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="13.5dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/grey_room"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@drawable/divider_recycler" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_conference_starttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_adddevice"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewconference_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/starttime" />

            <TextView
                android:id="@+id/textinfo_conference_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="@string/conference_starttime"
                android:textColor="@color/grey_room"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textinfo_create_conference_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="13.5dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/grey_room"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@drawable/divider_recycler" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_conference_costtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_conference_starttime"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewcreate_create_conference_costtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/costtime" />

            <TextView
                android:id="@+id/textinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="@string/conference_costtime"
                android:textColor="@color/grey_room"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textinfo_create_conference_costtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="13.5dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/grey_room"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@drawable/divider_recycler" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_createroom"
        android:layout_width="250dp"
        android:layout_height="43.5dp"
        android:layout_below="@id/create_conference_costtime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/login_corners"
        android:text="@string/created"
        android:textColor="@color/gray"
        android:textSize="14sp" />
</RelativeLayout>

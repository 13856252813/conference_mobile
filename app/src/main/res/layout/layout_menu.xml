<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/home_iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58.5dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_head" />

    <TextView
        android:id="@+id/home_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_iv_head"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/home_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_tv_name"
        android:layout_marginTop="13dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="28dp"
        android:layout_below="@id/home_tv_phone"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:id="@+id/menu_facesetting_face_layout"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/face_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="@string/facesetting_login"
            android:textColor="@color/grey_time"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="28dp"
        android:layout_below="@id/home_tv_phone"
        android:layout_marginTop="106dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/menu_about_layout"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/about_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="@string/menulayout_about"
            android:textColor="@color/grey_time"
            android:textSize="14sp" />
    </LinearLayout>
    <Button
        android:id="@+id/home_ib_logoff"
        android:layout_width="208.5dp"
        android:layout_height="36dp"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/logoff"
        android:textSize="14dp"
        android:textColor="@color/orange"
        android:background="@drawable/logoff_corners" />

    <TextView
        android:id="@+id/home_tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_time"
        android:textSize="11sp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    
</RelativeLayout>
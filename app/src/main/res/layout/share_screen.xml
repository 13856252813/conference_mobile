<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/stream_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:orientation="horizontal" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:gravity="center">


            <ImageView
                android:id="@+id/hide_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="22px"
                android:layout_marginTop="22px"
                android:focusable="true"
                android:visibility="gone"
                android:src="@mipmap/hide_screen" />

            <ImageView
                android:id="@+id/finish_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="22px"
                android:layout_toRightOf="@+id/hide_screen"
                android:layout_marginLeft="39px"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22px"
                android:focusable="true"
                android:src="@mipmap/finish_screen" />

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>